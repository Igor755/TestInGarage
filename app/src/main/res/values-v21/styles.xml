<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ViewLine" parent="Widget.AppCompat.Button.Colored">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@color/grey_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="popupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:listPreferredItemHeightSmall">@dimen/medium_margin</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/grey_very_dark</item>
        <item name="android:popupBackground">@color/grey_light</item>
        <item name="android:overlapAnchor">true</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:dropDownVerticalOffset">@dimen/big_padding</item>
        <item name="android:dropDownHorizontalOffset">@dimen/big_padding</item>

    </style>
</resources>